generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OAuthType {
  GOOGLE
}

enum Status {
  UPLOADING
  PROCESSING
  COMPLETED
  FAILED
}

enum Level {
  Info
  Error
}

model User {
  id             String @id @default(uuid())
  name           String
  email          String
  profilePicture String

  oAuthType OAuthType
  oAuthId   String

  videos Video[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([oAuthType, oAuthId])
}

model Video {
  id    String @id @default(uuid())
  title String

  name   String
  status Status

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  logs Log[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Log {
  id        String   @id @default(uuid())
  videoId   String
  level     Level
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  message   String
  timestamp DateTime
}
