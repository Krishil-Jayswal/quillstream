generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OAuthType {
  GOOGLE
}

enum Status {
  UPLOADING
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id             String    @id @default(uuid())
  name           String
  email          String
  profilePicture String

  oAuthType      OAuthType
  oAuthId        String

  videos Video[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([oAuthType, oAuthId])
}

model Video {
  id     String @id @default(uuid())
  title  String
  
  name   String
  status Status
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
